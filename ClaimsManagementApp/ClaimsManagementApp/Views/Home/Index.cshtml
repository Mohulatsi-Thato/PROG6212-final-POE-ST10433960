@{
    ViewData["Title"] = "Home - Claims Management";
}

<div class="container text-center py-5">
    <h1 class="display-4 mb-5 text-dark" style="font-family: 'Helvetica', sans-serif; font-weight: bold;">Claims Management System</h1>

    <div class="row">
        <!-- Lecturer Portal Card -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-lg border-0 rounded-lg" style="background: linear-gradient(145deg, #6D4C41, #BCAAA4);">
                <div class="card-body text-white">
                    <i class="fas fa-user-graduate fa-3x mb-3"></i>
                    <h5 class="card-title">Lecturer Portal</h5>
                    <p class="card-text">Submit and track your claims with ease</p>
                    <a href="@Url.Action("Index", "Lecturer")" class="btn btn-light btn-lg rounded-pill shadow-sm transition">Enter as Lecturer</a>
                </div>
            </div>
        </div>

        <!-- Coordinator Portal Card -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-lg border-0 rounded-lg" style="background: linear-gradient(145deg, #009688, #80CBC4);">
                <div class="card-body text-white">
                    <i class="fas fa-user-tie fa-3x mb-3"></i>
                    <h5 class="card-title">Coordinator Portal</h5>
                    <p class="card-text">Review and verify claims seamlessly</p>
                    <a href="@Url.Action("PendingClaims", "Coordinator")" class="btn btn-light btn-lg rounded-pill shadow-sm transition">Enter as Coordinator</a>
                </div>
            </div>
        </div>

        <!-- Manager Portal Card -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-lg border-0 rounded-lg" style="background: linear-gradient(145deg, #FF9800, #FFB74D);">
                <div class="card-body text-dark">
                    <i class="fas fa-user-cog fa-3x mb-3"></i>
                    <h5 class="card-title">Manager Portal</h5>
                    <p class="card-text">Final approval of claims</p>
                    <a href="@Url.Action("PendingClaims", "Manager")" class="btn btn-light btn-lg rounded-pill shadow-sm transition">Enter as Manager</a>
                </div>
            </div>
        </div>

        <!-- HR Portal Card -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-lg border-0 rounded-lg" style="background: linear-gradient(145deg, #2196F3, #64B5F6);">
                <div class="card-body text-white">
                    <i class="fas fa-hand-holding-usd fa-3x mb-3"></i>
                    <h5 class="card-title">HR Portal</h5>
                    <p class="card-text">Process payments and settlements with ease</p>
                    <a href="@Url.Action("Dashboard", "HR")" class="btn btn-light btn-lg rounded-pill shadow-sm transition">Enter as HR</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hover Effects for Cards */
    .card:hover {
        transform: translateY(-12px);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    /* Button Hover Effects */
    .btn:hover {
        background-color: #f5f5f5;
        color: #333;
        transition: background-color 0.3s, color 0.3s;
    }

    /* Smooth transitions for the buttons */
    .transition {
        transition: all 0.3s ease;
    }
</style>
